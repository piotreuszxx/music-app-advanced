<?xml version="1.0" encoding="UTF-8"?>
<!--Open Liberty documentation does not use schema in examples.-->
<server description="Jakarta EE example server">
    <featureManager>
        <feature>servlet-6.0</feature>
        <feature>jsonb-3.0</feature>
        <feature>cdi-4.0</feature>
        <feature>faces-4.0</feature>
        <feature>restfulWS-3.1</feature>
        <feature>persistence-3.1</feature>
        <feature>enterpriseBeans-4.0</feature>
        <feature>appSecurity-5.0</feature>
    </featureManager>

    <application type="war" location="music-app-advanced-1.0-SNAPSHOT.war">
        <application-bnd>
            <security-role name="ADMINISTRATOR">
                <group name="ADMINISTRATOR" access-id="group:jdbc/MusicDb/ADMINISTRATOR"/>
                <run-as userid="admin-service"/>
            </security-role>
            <security-role name="USER">
                <group name="USER" access-id="group:jdbc/MusicDb/USER"/>
            </security-role>
        </application-bnd>
    </application>

    <dataSource id="MusicDataSource" jndiName="jdbc/MusicDb">
        <jdbcDriver javax.sql.XADataSource="org.h2.jdbcx.JdbcDataSource"
                    javax.sql.ConnectionPoolDataSource="org.h2.jdbcx.JdbcDataSource"
                    javax.sql.DataSource="org.h2.jdbcx.JdbcDataSource"
                    libraryRef="H2JDBCLib"/>
        <properties URL="jdbc:h2:mem:musicdb"/>
        <!-- for tests with server based h2 db
        <properties URL="jdbc:h2:tcp://localhost/~/musicdb"/>
        -->
    </dataSource>

    <library id="H2JDBCLib">
        <fileset dir="${wlp.install.dir}/usr/servers/defaultServer/lib/global/" includes="h2-2.2.220.jar"/>
    </library>
</server>
